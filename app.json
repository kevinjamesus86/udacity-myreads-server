{
  "name": "udacity-myreads-server",
  "description": "Book search stuff, bruv",
  "repository": "https://github.com/kevinjamesus86/udacity-myreads-server",
  "stack": "heroku-16",
  "scripts": {
    "postdeploy": "yarn run seed"
  },
  "env": {
    "NODE_ENV": "production",
    "API_ORIGIN": {
      "description": "Origin of your heroku web service. Should be something like `https://<heroku-subdomain>.herokuapp.com` (no trailing slash plz)",
      "required": true
    },
    "GAPI_BOOKS_API_KEY": {
      "required": true
    },
  },
  "buildpacks": [{
    "url": "heroku/nodejs"
  }],
  "addons": [{
    "plan": "mongolab:sandbox",
    "as": "MONGODB"
  }],
  "formation": {
    "web": {
      "size": "free"
    }
  }
}
